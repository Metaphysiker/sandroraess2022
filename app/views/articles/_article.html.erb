    <div class="container">
      <div class="row">
        <div class="col-12 col-md-6 offset-md-3"
      </div>
      <%= image_tag article.featured_image, class: "img-fluid"%>
    </div>
  <% end %>
  <div class="container-fluid py-2 mt-3">
    <div class="container">
    <header class="my-3">
      <h1 class="text-center"><%= article.title %></h1>
      <p class="tagline text-center">
        <%= article.sub_title %>
      </p>
    </header>
    <p>
      Sandro RÃ¤ss - <%= l(article.created_at, format: :short) %>
    </p>
      </div>
  </div>
  <div class="container">
