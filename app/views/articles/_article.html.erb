<article id="<%= dom_id article %>" class="article">
  <% if article.featured_image.representable? %>
    <div class="container">
      <div class="row">
        <div class="col-12 col-md-6 offset-md-3"
      </div>
      <%= image_tag article.featured_image, class: "img-fluid"%>
    </div>
  </div>
  <% end %>
  <div class="container-fluid py-2 mt-3 ">
    <div class="container">
      <header class="my-3">
        <h1 class="text-center"><%= article.title %></h1>
        <p class="lead text-center">
          <%= article.sub_title %>
        </p>
      </header>
    </div>
  </div>
  <div class="container">
    <p>
    <small class="text-muted">
      Sandro RÃ¤ss
       -
      <%= l(article.created_at, format: :short) %>
    </small>
    </p>
    <hr>
    <div class="row">
      <div class="col-12 col-lg-8">

        <div class="content">
          <%= raw article.modified_content %>
        </div>
      </div>
      <div class="col-12 col-lg-4">
        <%= render "static_pages/about_me_card" %>
      </div>
    </div>
  </div>


</article>
