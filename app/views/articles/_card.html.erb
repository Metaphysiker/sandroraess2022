<div class="card h-100">
  <% if article.featured_image.representable? %>
      <%= image_tag article.featured_image, class: "card-img-top"%>
  <% end %>
  <div class="card-body">
    <small class="text-muted">
      <%= l(article.created_at, format: :short) %>
    </small>
    <h2 class="card-title"><%= article.title %></h2>
    <p class="card-text"><%= article.sub_title %></p>

  </div>
  <div class="card-footer bg-white border-top-0">
    <div class="d-grid gap-2">
      <%= link_to "Zum Artikel", article, class: "btn btn-primary" %>
    </div>
  </div>
</div>
