<div class="card h-100 border-0 shadow-lg article_card">
  <% if article.featured_image.representable? %>
      <%= image_tag article.featured_image, class: "card-img-top", width: 300, height: 250, style: "object-fit: cover"%>
  <% end %>
  <div class="card-body">
    <small class="text-muted">
      <%= l(article.created_at, format: :short) %>
    </small>
    <h2 class="card-title"><%= article.title %></h2>
    <hr>
    <p class="card-text"><%= article.seo_description %></p>

  </div>
  <div class="card-footer bg-white border-top-0">
    <div class="d-grid gap-2">
      <%= link_to t("read"), article, class: "btn btn-primary mb-2" %>
    </div>
  </div>
</div>
